<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="0dp"
            android:layout_height="100dp" android:id="@+id/calc_equation" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:textAlignment="textEnd" android:textSize="36sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:typeface="sans"
            android:fontFamily="monospace"/>
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:rowCount="4" app:columnCount="3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/calc_buttonGrid"
            app:alignmentMode="alignBounds"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/calc_result"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/divider">

        <Button
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_seven"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_row="0" app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_eight"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_row="0" app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_nine"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_row="0" app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_four"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_row="1" app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_five"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_row="1" app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_six"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_row="1" app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_one"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_row="2" app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_two"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_row="2" app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_three"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_row="2" app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="."
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_dot"
                style="@android:style/Widget.Material.Button.Borderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_row="3" app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_zero"
                style="@android:style/Widget.Material.Button.Borderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_row="3" app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="="
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_equals"
                style="@android:style/Widget.Material.Button.Borderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_row="3" app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
    </androidx.gridlayout.widget.GridLayout>
    <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toStartOf="@+id/gridLayout" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/calc_buttonGrid"/>
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/gridLayout"
            app:columnCount="1"
            app:rowCount="5" app:layout_constraintTop_toTopOf="@+id/calc_buttonGrid">

        <Button
                android:text="x"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_backspace"
                style="@android:style/Widget.Material.Button.Borderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_row="0" app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="/"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_divide"
                style="@android:style/Widget.Material.Button.Borderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_row="1" app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="*"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_multiply"
                style="@android:style/Widget.Material.Button.Borderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_row="2" app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_subtract"
                style="@android:style/Widget.Material.Button.Borderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_row="3" app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calc_add"
                style="@android:style/Widget.Material.Button.Borderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_row="4" app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_horizontal|fill_vertical"/>
    </androidx.gridlayout.widget.GridLayout>
    <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/calc_result"
            app:layout_constraintTop_toBottomOf="@+id/calc_equation" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textAlignment="textEnd"
            android:textSize="30sp" android:typeface="sans" android:fontFamily="monospace"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
</androidx.constraintlayout.widget.ConstraintLayout>