<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calc_zero"
            style="@android:style/Widget.Material.Button.Borderless.Small"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/button_background"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/calc_zero"
            android:id="@+id/button_grid" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/calc_seven"
                    style="@style/Widget.AppCompat.Button.Borderless"
            />
            <Button
                    android:text="8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/calc_eight"
                    style="@style/Widget.AppCompat.Button.Borderless" android:layout_marginBottom="8dp"/>
            <Button
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/calc_nine"
                    style="@style/Widget.AppCompat.Button.Borderless" android:layout_marginBottom="8dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/calc_4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginBottom="8dp"
            />
            <Button
                    android:text="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/calc_five"
                    style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                    android:layout_marginBottom="8dp"/>
            <Button
                    android:text="6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/calc_six"
                    style="@android:style/Widget.Material.Button.Borderless.Small" android:layout_marginBottom="8dp"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/calc_one"
                    style="@android:style/Widget.Material.Button.Borderless.Small"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_background"/>
            <Button
                    android:text="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/calc_two"
                    style="@android:style/Widget.Material.Button.Borderless.Small"
                    android:layout_marginBottom="8dp"/>
            <Button
                    android:text="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/calc_3"
                    style="@android:style/Widget.Material.Button.Borderless.Small"
            />
        </TableRow>
    </TableLayout>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>